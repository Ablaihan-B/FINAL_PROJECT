@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Users</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Email</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var IdentityUser in Model)
        {
        <tr>
            <td>@IdentityUser.Id</td>
            <td>@IdentityUser.Email</td>

            <td>
                <a asp-action="Update" class="btn btn-primary" asp-route-id="@IdentityUser.Id">Edit</a>
            </td>

            <td>
               
                <form method="post" asp-action="Delete" asp-route-id="@IdentityUser.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>